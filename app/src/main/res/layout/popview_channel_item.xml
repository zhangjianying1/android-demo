<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/channel_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="@string/subscribe_more_channel"
        android:textColor="@color/colorDDD"
        android:gravity="center"
        android:background="@drawable/border_radius_gray"/>
    <LinearLayout
        android:id="@+id/icon_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/solid_gray_radius_half">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/close_white"/>
    </LinearLayout>
</RelativeLayout>
